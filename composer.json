{
    "name": "eventdbx/eventdbx-php",
    "description": "PHP SDK for EventDBX.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "ext-ffi": "*"
    },
    "autoload": {
        "psr-4": {
            "EventDbx\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EventDbx\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "test": "phpunit"
    }
}
